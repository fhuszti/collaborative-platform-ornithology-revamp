{% extends "@FOSUser/layout.html.twig" %}
{% set profilePage = true %}
{% import "macros/_macroMetaTags.html.twig" as macroMetaTags %}

{% set meta_title %}{{'core.profile.meta_title'|trans}}{% endset %}

{% set meta_description %}
{{'core.profile.meta_description'|trans}}
{% endset %}

{% set meta_url %}
{{ url('fos_user_profile_show') }}
{% endset %}

{% block title %}
    {{ meta_title }} - {{ parent() }}
{% endblock %}

{% block meta %}
    {{ macroMetaTags.meta_tags(meta_title, meta_description, meta_url ) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets filter='cssrewrite, ?scssphp'
        'bundles/app/css/profile.css'
        'bundles/app/css/jquery.bsPhotoGallery.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
    {% endstylesheets %}
{% endblock %}

{% block fos_user_content %}
	{% include "@FOSUser/Profile/show_content.html.twig" %}
{% endblock fos_user_content %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts filter='?jsqueeze'
        'bundles/app/js/profile.js'
        'bundles/app/js/jquery.bsPhotoGallery.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
