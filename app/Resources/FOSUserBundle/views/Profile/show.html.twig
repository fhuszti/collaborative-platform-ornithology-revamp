{% extends "@FOSUser/layout.html.twig" %}
{% set profilePage = true %}

{% import "@FOSUser/Profile/macros/_macroInfosModal.html.twig" as macroInfosModal %}
{% import "@FOSUser/Profile/macros/_macroObservationDisplay.html.twig" as macroObservationDisplay %}
{% import "@FOSUser/Profile/macros/_macroObservationModal.html.twig" as macroObservationModal %}

{% block title %}
    {{ 'core.profile.title'|trans }} - {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets filter='cssrewrite, ?scssphp'
        'bundles/app/css/profile.css'
        'bundles/app/css/jquery.bsPhotoGallery.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
    {% endstylesheets %}
{% endblock %}

{% block fos_user_content %}
	{% include "@FOSUser/Profile/show_content.html.twig" %}
{% endblock fos_user_content %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts filter='?jsqueeze'
        'bundles/app/js/profile.js'
        'bundles/app/js/jquery.bsPhotoGallery.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
