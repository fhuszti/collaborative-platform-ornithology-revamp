{% macro meta_tags(title, description, url) %}

<meta name="description" content="{{ description }}" />
<link rel="image_src" href="https://fhuszti.com.s3.amazonaws.com/nao/big-logo.png" />

<!-- Facebook -->
<meta property="og:title" content="{{ title }} - Nos Amis les Oiseaux" />
<meta property="og:description" content="{{ description }}" />
<meta property="og:url" content="{{ url }}" />
<meta property="og:site_name" content="Nos Amis les Oiseaux" />
<meta property="og:type" content="website" />
<meta property="og:image" content="https://fhuszti.com.s3.amazonaws.com/nao/big-logo.png" />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ title }} - Nos Amis les Oiseaux">
<meta name="twitter:description" content="{{ description }}">
<meta name="twitter:site" content="Nos Amis les Oiseaux">
<meta name="twitter:creator" content="NAO">
<meta name="twitter:image" content="https://fhuszti.com.s3.amazonaws.com/nao/big-logo.png">

{% endmacro %}
