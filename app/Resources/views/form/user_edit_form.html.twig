{{ form_start(form, {
	'method': 'post',
	'action': path('admin_user_edit', {'id': user.id}),
	'attr': {
		'class': 'form-horizontal',
        'id': 'user-edit-form'
	}
}) }}
    {% if form_errors(form.firstName) %}
        {{ form_errors(form.firstName) }}
    {% endif %}
    {% if form_errors(form.surname) %}
        {{ form_errors(form.surname) }}
    {% endif %}
    {% if form_errors(form.email) %}
        {{ form_errors(form.email) }}
    {% endif %}
    {% if form_errors(form.roles) %}
        {{ form_errors(form.roles) }}
    {% endif %}
    {% if form_errors(form.plainPassword.first) %}
        {{ form_errors(form.plainPassword.first) }}
    {% endif %}
    {% if form_errors(form.plainPassword.second) %}
        {{ form_errors(form.plainPassword.second) }}
    {% endif %}
    {% if form_errors(form) %}
        {{ form_errors(form) }}
    {% endif %}

    <div class="form-group">
        {{ form_label(form.firstName) }}
        <div class="col-sm-8">
        	{{ form_widget(form.firstName) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.surname) }}
        <div class="col-sm-8">
            {{ form_widget(form.surname) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.email) }}
        <div class="col-sm-8">
            {{ form_widget(form.email) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.roles) }}
        <div class="col-sm-8">
            {{ form_widget(form.roles) }}
        </div>
    </div>

    <hr />

    <p id="user-edit-form-pass-info">
        {{ 'core.admin.edit.info'|trans }}
    </p>

    <div class="form-group">
        {{ form_label(form.plainPassword.first) }}
        <div class="col-sm-8">
        	{{ form_widget(form.plainPassword.first) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.plainPassword.second) }}
        <div class="col-sm-8">
        	{{ form_widget(form.plainPassword.second) }}
        </div>
    </div>
    
    <button type="submit" class="hidden" id="user-edit-form-button"></button>
{{ form_end(form) }}
