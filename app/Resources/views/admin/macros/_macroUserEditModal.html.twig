{% macro user_edit_modal() %}
	<div class="modal fade" id="admin_user-edit-modal">
	  	<div class="modal-dialog">
		    <div class="modal-content">
		      	<div class="modal-header">
		        	<button type="button" class="close" data-dismiss="modal">x</button>
		        	<h4 class="modal-title">{{ 'core.admin.edit.title'|trans }}</h4>
		        </div>
		      	
		      	<div class="modal-body" id="admin_user-edit-modal-body">
		      		<!-- filled with AJAX -->
		      	</div>

		      	<div class="modal-footer">
			        <label for="user-edit-form-button" tabindex="0" class="btn btn-success" data-href="{{ path('admin_home') }}" id="admin_user-edit-modal-confirm">
			        	{{ 'core.admin.confirm'|trans }}
			        </label>
			        <button class="btn btn-danger" data-dismiss="modal">{{ 'core.admin.abort'|trans }}</button>
			     </div>

		    </div>
	  	</div>
	</div>
{% endmacro %}
